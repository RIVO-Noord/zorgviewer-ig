{
    "resourceType": "StructureDefinition",
    "url": "http://hl7.nl/fhir/zorgviewer/StructureDefinition/DocumentReference",
    "language": "en",
    "name": "DocumentReference",
    "title": "DocumentReference",
    "status": "draft",
    "description": "The minimal DocumentReference for the Zorgviewer",
    "kind": "resource",
    "abstract": false,
    "type": "DocumentReference",
    "baseDefinition" : "http://nictiz.nl/fhir/StructureDefinition/IHE.MHD.Minimal.DocumentReference",
    "derivation": "constraint",
    "differential": {
        "element": [
            {
                "id": "DocumentReference.status",
                "path": "DocumentReference.status",
                "constraint": [
                    {
                        "key": "zv-dr-1",
                        "severity": "error",
                        "human": "Only status is current final documents are expected.",
                        "expression": "status='current'",
                        "xpath": "f:status='current'"
                    }
                ],
                "mustSupport": true
            },
            {
                "id": "DocumentReference.type",
                "path": "DocumentReference.type",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.class",
                "path": "DocumentReference.class",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.indexed",
                "path": "DocumentReference.indexed",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.author",
                "path": "DocumentReference.author",
                "comment": "Expect the references Practitioner to have his Organization",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.description",
                "path": "DocumentReference.description",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.content",
                "path": "DocumentReference.content"
            },
            {
                "id": "DocumentReference.content.attachment",
                "path": "DocumentReference.content.attachment",
                "constraint": [
                    {
                        "key": "zv-dr-2",
                        "severity": "warning",
                        "human": "Only pdf documents are expected through the url",
                        "expression": "content.attachement.contentType='application/pdf'",
                        "xpath": "f:content.attachement.contentType='application/pdf'"
                    } 
                ],
                "mustSupport": true
            },
            {
                "id": "DocumentReference.content.attachment.contentType",
                "path": "DocumentReference.content.attachment.contentType",
                "mustSupport": true
            },
            {
                "id": "DocumentReference.content.attachment.url",
                "path": "DocumentReference.content.attachment.url",
                "min": 1,
                "mustSupport": true
            }
        ]
    }
}